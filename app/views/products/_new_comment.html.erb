<% if signed_in? %>
	<h4>Submit your review</h4>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		<p>
			<%= f.text_area :body,  cols: "40", rows: "5", style: "resize:none", placeholder: 'COMMENTS' %>
		</p>

		<p>
			<%= f.label :rating %>
			<div class="rating"></div>

		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>
