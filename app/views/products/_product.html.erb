
  <div class="col-sm-4 col-md-4 col-lg-4 product-columns">
    <p>
      <%= link_to product do %>
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <% end %>
    </p>
    <div class="words">
      <h1><%= product.name %></h1>
      <p><%= product.description %></p>
      <p><%= product.colour %></p>
      <p>$<%= product.price %></p>
    </div>

    <p>
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(product) %>
      <% end %>
    </p>
  </div>
